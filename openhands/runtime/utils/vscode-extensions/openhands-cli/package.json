{
  "name": "openhands-cli",
  "displayName": "OpenHands CLI",
  "description": "VS Code extension to interact with the OpenHands CLI.",
  "version": "0.0.1",
  "publisher": "openhands",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:openhands-cli.startSession"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openhands-cli.startSession",
        "title": "Start OpenHands CLI Session"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "^22.15.12",
    "typescript": "^5.8.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@types/eventsource": "^1.1.15"
  },
  "dependencies": {
    "eventsource": "^2.0.2"
  }
}
