{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noEmit": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/extension/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/webview"
  ]
}
